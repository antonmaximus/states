/               %li= link_to i, '#', data: { tabindex: -1 }


%main 
  %section.search
    %fieldset
      %legend Enter U.S. State
      %input#searchInput{ name:'searchInputName', type:'text', maxlength:20, tabindex:1, autofocus:true, autocomplete:"off"}
      /Initial values are for JavaScript manipulation
      #clearOption{ style:"display: none; opacity: 0;", tabindex:2 }
      %ul#result
  %section.info
    %h1#stateName Alabama
    = image_tag('./flags/alabama.flag.png', id:'flag', alt:'Alabama flag',
        title:'Alabama flag')
    %ul#stateInfo
      %li
        %span.titleList Nickname:
        %span#nickname Yellowhammer State
      %li
        %span.titleList Capital:
        %span#capital Montgomery
      %li
        %span.titleList Area:
        %span#area_sqmi 52,420.07 sq mi
      %li
        %span.titleList Population (2013):
        %span#population 4,833,722



%section.map
  %object#svgmap{type:"image/svg+xml", data:"./images/us_map.svg"}





#info.mainContent
  %a{ href: "https://github.com/ayjaygit/states#readme", target: "_blank" } |
    Learn More about the Technologies demonstrated.


/Navigation Menu
/ #headerBackground
/   %header.mainHeader
/     = link_to image_tag('logo.png', alt:'Logo'), '#'
/     %nav.mainNav
/       %ul
/         %li= link_to 'SAMPLE', '#'
/         %li
